<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="387dp"
        android:layout_height="336dp"
        android:id="@+id/container" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp" android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btn2" app:layout_constraintHorizontal_bias="0.1">
    </LinearLayout>
    <Button
        android:text="1"
        android:layout_width="107dp"
        android:layout_height="58dp" android:id="@+id/btn1"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintEnd_toStartOf="@+id/btn2" android:layout_marginEnd="11dp"
        android:layout_marginBottom="37dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:text="2"
        android:layout_width="111dp"
        android:layout_height="55dp" android:id="@+id/btn2"
        android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn3" android:layout_marginEnd="28dp"
        android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/container"
        android:layout_marginBottom="41dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:text="3"
        android:layout_width="93dp"
        android:layout_height="58dp" android:id="@+id/btn3"
        android:layout_marginStart="28dp" app:layout_constraintStart_toEndOf="@+id/btn2"
        android:layout_marginTop="136dp" app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>